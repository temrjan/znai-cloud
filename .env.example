# AI-AVANGARD CONFIGURATION
# Copy this file to .env and fill in the actual values

# ============================================================
# ENVIRONMENT
# ============================================================
NODE_ENV=production
DEBUG=false

# ============================================================
# API KEYS (REQUIRED)
# ============================================================
OPENAI_API_KEY=sk-proj-xxxxx_your_openai_key_here

# ============================================================
# DATABASE - PostgreSQL
# ============================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ai_avangard
POSTGRES_USER=ai_avangard_admin
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Connection pool
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=0

# ============================================================
# CACHE - Redis
# ============================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# ============================================================
# VECTOR DATABASE - Qdrant
# ============================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=ai_avangard_main
QDRANT_API_KEY=

# ============================================================
# SECURITY - JWT
# ============================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_THIS_VERY_LONG_RANDOM_STRING_MIN_64_CHARS
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=480  # 8 hours

# Additional secret for sensitive operations
SECRET_KEY=CHANGE_THIS_ANOTHER_VERY_LONG_RANDOM_STRING

# ============================================================
# OPENAI CONFIGURATION
# ============================================================
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_EMBEDDING_DIMENSIONS=3072
OPENAI_LLM_MODEL=gpt-4o
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3
OPENAI_TIMEOUT=30

# ============================================================
# APPLICATION SETTINGS
# ============================================================
APP_NAME="AI-Avangard"
APP_VERSION=1.0.0
API_PREFIX=/api/v1

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================
# USER QUOTAS
# ============================================================
FREE_USER_MAX_DOCUMENTS=5
FREE_USER_MAX_QUERIES_DAILY=100
MAX_FILE_SIZE_MB=10

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=.pdf,.txt,.md,.docx

# ============================================================
# SYSTEM CAPACITY
# ============================================================
MAX_TOTAL_USERS=100
MAX_TOTAL_DOCUMENTS=500

# ============================================================
# RATE LIMITING
# ============================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/backend.log

# ============================================================
# ADMIN
# ============================================================
# Initial admin user (created on first run)
ADMIN_EMAIL=admin@ai-avangard.local
ADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD
ADMIN_FULL_NAME=System Administrator

# ============================================================
# DEPLOYMENT (Optional)
# ============================================================
# Domain for production
DOMAIN=ai-avangard.local

# SSL/TLS
SSL_CERT_PATH=/etc/letsencrypt/live/ai-avangard.local/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/ai-avangard.local/privkey.pem

# ============================================================
# MONITORING (Optional)
# ============================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ============================================================
# BACKUP (Optional)
# ============================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Together AI (Qwen)
TOGETHER_API_KEY=your_together_api_key_here
TOGETHER_MODEL=Qwen/Qwen2.5-72B-Instruct-Turbo
USE_TOGETHER=true
